{
	"name": "WEBuffet",
	"version": "1.0",
	"description": "",
	"permissions": [
		"https://*/*",
    "http://*/*",
		"activeTab",
		"tabs",
		"declarativeContent",
		"storage"
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": ["build/webuffet.built.js"],
			"run_at": "document_start"
		},
		{
			"matches": ["*://*/*"],
			"js": ["HideHtml.js"],
			"run_at": "document_start"
		}
	],
	"page_action": {
		"default_popup": "popup.html"
	},
	"manifest_version": 2
}